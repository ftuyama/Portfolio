<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-4 col-xs-12 col-offset-sm-1">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :github_url %><br />
      <%= f.text_field :github_url, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :url %><br />
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :image %><br />
      <%= f.text_field :image, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :kind %><br>
      <%= f.collection_select :kind, ['WEB', 'APP', 'OTHER'], :to_s, :to_s, {}, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :user_id %><br>
      <%= f.collection_select :user_id, User.order(:name), :id, :name, {}, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit 'Update', :class => 'btn btn-success' %>
    </div>
  </div>
<% end %>
