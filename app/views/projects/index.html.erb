<h1>Listing projects</h1>

<div class="container">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.user.name if project.user %></td>
          <td><%= link_to 'Show', project, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Project', new_project_path, class: "btn btn-success" %>
<%= link_to 'Back to Users', users_path, class: "btn btn-default" %>
