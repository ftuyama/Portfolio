<p id="notice"><%= notice %></p>

<h1>Project details</h1>
<hr />
<div class="container well">
  <p>
    <strong>Name:</strong>
    <%= @project.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <p><%= @project.description %></p>
  </p>
  <% if @project.user %>
    <p>
      <strong>User:</strong>
      <%= @project.user.name %>
      <%= link_to 'Show', user_path(@project.user), class: "btn btn-default" %>
    </p>
  <% else %>
    <p>
      <strong>No User associated</strong>
    </p>
  <% end %>
</div>

<br />
<div class="bottom-button">
  <% if @project.user && @project.user == current_user %>
    <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-default" %>
    <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <% end %>
  <%= link_to 'Back', projects_path, class: "btn btn-default" %>
</div>
