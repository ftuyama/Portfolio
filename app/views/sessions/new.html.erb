<h1>Login</h1>
<hr />

<div class="container">
  <%= form_tag '/login' do %>
    <% if @error %>
      <div class="alert alert-danger" style="display: inline-block;">
        <%= @error %>
      </div>
    <% end %>
    <div class="col-sm-4 col-xs-12 col-offset-sm-1">
      <div class="field">
        <%= label_tag :username %><br />
        <%= text_field_tag :username, nil, autofocus: true, :class => 'form-control' %>
      </div>
      <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password, nil, autocomplete: false, :class => 'form-control' %>
      </div>
      <div class="actions">
        <%= submit_tag 'Login', :class => 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
